 <div class="alert alert-info" role="alert">
    <h4>
        {{messageHeader}}
    </h4>
    <p>
        {{#if isAdmin}}
        <a href="/requests?status=New" class="close" data-dismiss="alert">
            {{else}}
            <a href="/requests" class="close" data-dismiss="alert">
            {{/if}}
               {{message}}
            </a>
        </p>
    </div>
    {{#if isAdmin}}
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">
                <i class="fa fa-building"></i>
                Units
            </h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <h5>Unit Number</h5>
                    <ul class="list-group">
                        {{#each users as |user|}}
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">
                                    <a href="/users/{{user.id}}">
                                        {{user.unitnumber}}
                                    </a>
                                </div>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="col-6">
                    <h5>Open/In-Progress Work Orders</h5>
                    <ul class="list-group">
                        {{#each users as |user|}}
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col">
                                    {{getWorkOrders ../workorders user.unitnumber}}
                                </div>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    {{/if}}

