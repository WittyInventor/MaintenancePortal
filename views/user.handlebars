<h2>
    <i class="fa fa-users"></i>
    User
</h2>

{{! Path: views/partials/user-view.handlebars }}
<div class="card col">
    <div class="card-body">
        {{#if isAdmin}}
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="username">
                <i class="fa fa-user"></i>
            </label>
            <div class="col-sm-8">
                <input class="form-control" id="username" value="{{user.username}}"></input>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="role">Role</label>
            <div class="col-sm-8">
                {{!-- <input class="form-control" id="wo-status" disabled value="{{workorder.status}}"></input> --}}
                <select class="form-control" id="role">
                     option value="{{user.role}}" selected hidden>{{workorder.role}}</option>
                    <option value="Tenant">Tenant</option>
                    <option value="Worker">Worker</option>
                    <option value="Manager">Manager</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="isAdmin">isAdmin?</label>
            <div class="col-sm-8">
                {{!-- <input class="form-control" id="wo-status" disabled value="{{workorder.status}}"></input> --}}
                <select class="form-control" id="isAdmin">
                     <option value="{{user.isAdmin}}" selected hidden>{{user.isAdmin}}</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="unitnumber">
                <i class="fa fa-door-closed"></i>
            </label>
            <div class="col-sm-8">
                <input class="form-control" id="unitnumber" value="{{user.unitnumber}}"></input>
            </div>
        </div>
        {{/if}}
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="email">
                <i class="fa fa-envelope"></i>
            </label>
            <div class="col-sm-8">
                <input class="form-control" id="email" value="{{user.email}}"></input>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" for="phoneinfo">
                <i class="fa fa-phone"></i>
            </label>
            <div class="col-sm-8">
                <input class="form-control" id="phoneinfo" value="{{user.phoneinfo}}"></input>
            </div>
        </div>
    </div>
    <div class="card-footer">
         <div class="btn-group float-right">
        <button data-id="{{user.id}}"  class="btn btn-success" onclick="saveUser(this)">
            <i class="fa fa-save"></i>
            Save
        </button>
        {{!-- <a href="/users/{{user.id}}" class="btn btn-danger">
            <i class="fa fa-trash"></i>
        </a> --}}
        </div>
    </div>
</div>
{{#if isAdmin}}
<script src="/js/user.js"></script>
{{/if}}

