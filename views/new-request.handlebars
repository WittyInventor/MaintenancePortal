<div class="card border-info bg-primary">
    <div class="card-header">
        <p>
            <i class="fa fa-tools"></i>
            {{request.categorymaintenance}}
            <span class="float-right">
                <i class="fa fa-calendar"></i>
                {{formatDate request.createdAt}}
            </span>
        </p>
    </div>
    <div class="card-body">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <div class="accordion-header" id="headingOne">
                    <button class="accordion-button bg-primary text-white"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#collapse{{request.id}}">
                        <i class="fa fa-sticky-note"></i>
                        &nbsp;{{ request.description}}
                    </button>
                </div>
                <div class="form-group row">
                    <label class="col-sm-4 col-form-label" for="request-category-maintenance">Category</label>
                    <div class="col-sm-8">
                {{!-- <input class="form-control" id="wo-status" disabled value="{{workorder.status}}"></input> --}}
                        <select class="form-control" id="request-category-maintenance">
                            <option value="Appliance">Appliance</option>
                            <option value="Doors and Locks">Doors and Locks</option>
                            <option value="Flooring">Flooring</option>
                            <option value="Plumbing">Plumbing</option>
                            <option value="HVAC">HVAC</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                </div>
                {{!-- <div id="collapse{{request.id}}" class="accordion-collapse
                    collapse"
                    aria-labelledby="headingOne"
                    data-bs-parent="#accordionExample"> --}}
                    {{!-- <div class="accordion-body"> --}}
                        {{> request-item id="request-description" item="Description"}}
                        {{> request-item id="request-permission-to-enter" item="Enter ?"}}
                        {{> request-item id="request-alarm-code" item="Alarm Code"}}
                        {{> request-item id="request-entry-notes" item="Entry Notes"}}
                    {{!-- </div> --}}
                </div>
                {{!-- </div> --}}
        </div>
    </div>
    <div class="btn-group float-right">
        {{!-- <button type="button" class="btn btn-dark btn-block" id="wo-cancel">
            <i class="fa fa-cancel"></i>
        </button> --}}
        <button type="button" class="btn btn-success btn-block wo-save"
            id="request-submit" onclick="submitRequest(this)">
           <i class="fa fa-paper-plane" aria-hidden="true"></i>
        </button>
    </div>
</div>
<script src="/js/request.js"></script>