<h2>
    {{!-- <i class="fa fa-inbox"></i> --}}
    <img src="https://img.icons8.com/ios-filled/50/FFFFFF/work.png"/>
    Work Orders
</h2>
<div class="row">
    <div class="col text-center mb-4">
        <a type="button" href="/workorders?status=Open" class="btn btn-primary">Open</a>
        <a type="button" href="/workorders?status=In%20Progress" class="btn btn-primary">In Progress</a>
        <a type="button" href="/workorders?status=Completed" class="btn btn-primary">Completed</a>
        <a type="button" href="/workorders" class="btn btn-primary">All</a>
    </div>
</div>
<div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 row-cols-lg-2
    row-cols-xl-2">
    {{#each workorders as |workorder|}}
    <div class="col mb-4">
        {{> workorder-view isAdmin=true workorder=workorder workers=../workers}}
    </div>
    {{/each}}
</div>